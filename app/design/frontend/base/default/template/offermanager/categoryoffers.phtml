								<td class="offer-column <?php echo $j+1;$columnFlag=$j+1;?>" style="width:2150px;">
									<div class="category-border  offerBoxShadow">
										<div class="productImg category"  >
											<a target="_blank" href="<?php echo $this->getUrl('/').$offer[$j]['url_key'].'.html'; ?>">
												<img  width="100%" height="130" src="<?php echo $this->helper('offermanager')->resizeImg($offer[$j]['offer_icon'], 'catalog/offer/icon/', '136', '130'); ?>">
											</a>
										</div>
										<div class="divoffername">
											<div class="ofrnameBox ">
												<a target="_blank" href="<?php echo $this->getUrl('/').$offer[$j]['url_key'].'.html'; ?>"><?php echo $offer[$j]['offer_name']?></a>
											</div>
											<div class="clr"></div>
										</div>
									</div>
								</td>	
								<?php $flag=$j+1;?>
							<?php endif;?>
						<?php endfor;?>
					</div>
				</tr>
		<?php endfor;?>
	</table>	
</div>
<?php endif;?>
