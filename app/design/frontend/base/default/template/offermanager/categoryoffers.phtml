<?php $offer=$this->getCategoryOffers();
	$offerCount=count($offer);
	$columnCount=3;
	$rowCount=ceil($offerCount/$columnCount);
	$flag=0;
?>
<?php if(!empty($offer)):?>	
<div class="headingBoxTxt offerBoxShadow">
	<strong>
		<span>Offers For <?php echo Mage::getModel('catalog/layer')->getCurrentCategory()->getName();?></span>
	</strong>
</div>
<div class="category-offer">
	<table >
		<?php for($i=1;$i<=$rowCount;$i=$i+1):?>
			<?php $columnFlag=0;if ($flag==0){$j=0;}else{$j=$flag;}?>
			
				<tr class="offer-row <?php echo $i;?>" style="border: 1px solid #C4C1BC;">
					<div>
						<?php for($j;$j<=$offerCount-1;$j=$j+1):?>
